<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_audiogroup">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="web.external_layout_audiogroup">

        <!--t t-call="web.external_layout"-->
            <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                <div>
                    <div style=" background-color:  #3498DB;">
                        <h2>
                            <span><font color="#fff">Orden# </font></span>
                            <font color="#fff"><span t-field="o.name"/></font>
                        </h2>

                        <div class="row mt32 mb32">
                            <div class="col-3">
                                <font color="#fff">
                                <strong>Referencia:</strong>
                                <p t-field="o.client_order_ref"/></font>
                            </div>

                            <div class="col-3" t-if="o.date_order">
                                <font color="#fff">
                                <strong>Fecha emisión:</strong>
                                <p t-field="o.date_order"/></font>
                            </div>

                            <div class="col-3" t-if="o.payment_term_id">
                                <font color="#fff">
                                <strong> Términos de pago:</strong>
                                <p t-field="o.payment_term_id"/></font>
                            </div>

                            <div class="col-3" t-if="o.user_id">
                                <font color="#fff">
                                <strong>Vendedor:</strong>
                                <p t-field="o.user_id"/></font>
                            </div>
                        </div>
                    </div>
                
                    <div class="row mt32 mb32">
                        <div class="col-3 ">
                            <strong>Cliente:</strong>
                        </div>
                        <div class="col-6 ">
                            <span t-field="o.partner_id"/>
                        </div>
                        <div class="col-3 text-right">
                            <strong>Cédula:</strong> <span t-if="o.partner_id.vat" t-field="o.partner_id.vat"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-3 ">
                            <strong>Dirección:</strong>
                        </div>
                        <div class="col-9 ">
                            <span t-if="o.partner_id.street" t-field="o.partner_id.street"/><br/>
                            <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                            <strong> <span t-if="o.note" t-field="o.note"/></strong>
                        </div>
                    </div>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])"/>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th style="background-color:#3498DB !important;color:#FFF !important;">Descripción</th>
                                <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Cantidad</th>
                                <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Precio unidad</th>
                                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line" style="background-color:#3498DB !important;color:#FFF !important;">Desc.(%)</th>
                                <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Impuestos</th>
                                <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Importe</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="o.order_line" t-as="l">
                                <tr t-if="l.product_uom_qty and l.price_unit">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span groups="product.group_uom" t-field="l.product_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                                <tr t-if="l.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="l.name"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div name="total">
                    <div class="col-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <td style="background-color:#3498DB !important;color:#FFF !important;"><strong>Total</strong></td>
                                <td class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">
                                    <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br/><br/><br/><br/><br/><br/><br/><br/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="custom_report_saleorder" inherit_id="sale.report_saleorder">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="audiogroup.report_saleorder_document_audiogroup" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </xpath>
    </template>

    <template id="external_layout_audiogroup">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row mt32 mb32">
                <div class="col-6">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 100px;"/>
                </div>
                <div class="col-6 text-right" style="font:12px lucida-console,sans-serif !important;">
                    <span t-field="company.partner_id"/>
                    <br/>
                    <span t-field="company.x_commercial_name"/>
                    <br/>
                    Cédula Jurídica: <span t-field="company.partner_id.vat"/>
                    <br/>
                    Teléfono: <span t-field="company.partner_id.phone"/>
                    <br/>
                    <span t-field="company.partner_id.email"/>
                    <br/>
                    <span t-field="company.partner_id.country_id"/>,<span t-field="company.partner_id.state_id"/>
                    <br/>
                    <span t-field="company.partner_id.street"/>
                    <br/>
                    <span t-field="company.partner_id.street2"/>
                </div>
            </div>
        </div>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                         adding d-inline class fixes the problem-->
                    <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline"><span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

</odoo>
